@page "/VacationPackages/Create"
@model AppTurismo.Pages.VacationPackages.CreateModel
@{
    ViewData["Title"] = "Criar Pacote";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="VacationPackage.Title" class="form-label"></label>
                            <input asp-for="VacationPackage.Title" class="form-control"/>
                            <span asp-validation-for="VacationPackage.Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VacationPackage.StartDate" class="form-label"></label>
                            <input asp-for="VacationPackage.StartDate" class="form-control" type="date"/>
                            <span asp-validation-for="VacationPackage.StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="VacationPackage.Price" class="form-label"></label>
                            <input asp-for="VacationPackage.Price" class="form-control" type="number" step="0.01"/>
                            <span asp-validation-for="VacationPackage.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VacationPackage.MaxCapacity" class="form-label"></label>
                            <input asp-for="VacationPackage.MaxCapacity" class="form-control" type="number"/>
                            <span asp-validation-for="VacationPackage.MaxCapacity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Destinos</label>
                        <select asp-for="SelectedDestinations" asp-items="@Model.DestinationOptions"
                                class="form-select" multiple size="6">
                        </select>
                        <small class="text-muted">Use Ctrl para selecionar v√°rios destinos</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
