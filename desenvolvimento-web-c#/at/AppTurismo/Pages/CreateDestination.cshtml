@page
@model AppTurismo.Pages.CreateDestinationModel

@{
    ViewData["Title"] = "Criar Destino";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Novo Destino</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Destination.Name" class="form-label">Nome da Cidade</label>
                        <input asp-for="Destination.Name" class="form-control" placeholder="Ex: Paris"/>
                        <span asp-validation-for="Destination.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Destination.Country" class="form-label">País</label>
                        <input asp-for="Destination.Country" class="form-control" placeholder="Ex: França"/>
                        <span asp-validation-for="Destination.Country" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">
                            Cadastrar Destino
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Destinos Existentes (@Model.ExistingDestinations.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.ExistingDestinations.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                            <tr>
                                <th>Cidade</th>
                                <th>País</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var destination in Model.ExistingDestinations)
                            {
                                <tr>
                                    <td>@destination.Name</td>
                                    <td>@destination.Country</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum destino cadastrado ainda.</p>
                }
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success mt-3 alert-dismissible fade show">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
