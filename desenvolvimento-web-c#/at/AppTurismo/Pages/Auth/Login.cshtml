
@page "/Auth/Login"
@model AppTurismo.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="card shadow col-md-6">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            Acesso ao Sistema
        </h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">
                    Usuário
                </label>
                <input asp-for="Username" class="form-control" placeholder="Digite seu usuário" autofocus/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">
                    Senha
                </label>
                <input asp-for="Password" class="form-control" placeholder="Digite sua senha"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ReturnUrl"/>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    Entrar
                </button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <small class="text-muted">
                Credenciais de teste: admin / 123456
            </small>
        </div>
    </div>
</div>
